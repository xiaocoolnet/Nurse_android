<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <!--头布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_50"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/nurse_first_community"
                android:layout_width="@dimen/activity_size_80"
                android:layout_height="@dimen/activity_size_30"
                android:background="@drawable/nurse_fragment_title_community_press"
                android:gravity="center"
                android:text="圈子"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_size_16" />


            <TextView
                android:id="@+id/nurse_second_employ"
                android:layout_width="@dimen/activity_size_80"
                android:layout_height="@dimen/activity_size_30"
                android:background="@drawable/nurse_fragment_title_employ"
                android:gravity="center"
                android:text="招聘"
                android:textColor="@color/gray4"
                android:textSize="@dimen/activity_size_16" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_nurse_message"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/iv_nurse_message"
                android:layout_width="@dimen/activity_size_20"
                android:layout_height="@dimen/activity_size_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:src="@mipmap/ic_new_message" />

            <TextView
                android:id="@+id/tv_nurse_message"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/button_boder_choice_num"
                android:layout_alignTop="@+id/iv_nurse_message"
                android:layout_alignRight="@+id/iv_nurse_message"
                android:layout_alignEnd="@+id/iv_nurse_message" />
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/nurse_replace_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_2"
        android:background="@color/purple" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_1"
        android:background="@color/gray4" />
</LinearLayout>
