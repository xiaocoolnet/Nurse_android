<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <include layout="@layout/title_top"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_1"
        android:background="@color/purple"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_boder_gray"
        android:layout_margin="@dimen/activity_size_15"
        >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_18"
            android:text="+86"
            android:textColor="@color/study_text"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/activity_size_10"
            />
        <View
            android:layout_width="@dimen/activity_size_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_size_5"
            android:layout_marginBottom="@dimen/activity_size_5"
            android:background="@color/gray2"
            />
        <EditText
            android:id="@+id/navigatin_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入您注册的手机号"
            android:textSize="@dimen/text_size_16"
            android:background="@null"
            android:textColorHint="@color/gray2"
            android:layout_marginLeft="@dimen/activity_size_10"
            />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_1"
            android:background="@color/gray2"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18"
                android:text="验证码"
                android:textColor="@color/study_text"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/activity_size_10"
                />
            <View
            android:layout_width="@dimen/activity_size_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_size_5"
            android:layout_marginBottom="@dimen/activity_size_5"
            android:background="@color/gray2"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/navigation_code_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="@dimen/activity_size_10"
            android:textColorHint="@color/gray2"
            android:hint="请输入获取的验证码"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:textSize="@dimen/text_size_16"
            android:layout_marginBottom="@dimen/activity_size_10"
            />
        <Button
            android:id="@+id/navigation_gain_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_boder"
            android:text="获取验证码"
            android:textSize="13sp"
            android:padding="3dp"
            android:textColor="#8F006A" />
    </RelativeLayout>
            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_1"
            android:background="@color/gray2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textColor="@color/study_text"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_18"
            android:layout_margin="@dimen/activity_size_10"
            />
            <View
                android:layout_width="@dimen/activity_size_1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_size_5"
                android:layout_marginBottom="@dimen/activity_size_5"
                android:background="@color/gray2"
                />
            <EditText
                android:id="@+id/navigatin_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入新密码"
                android:textSize="@dimen/text_size_16"
                android:password="true"
                android:background="@null"
                android:textColorHint="@color/gray2"
                android:layout_marginLeft="@dimen/activity_size_10"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_1"
            android:background="@color/gray2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="再次输入"
                android:textColor="@color/study_text"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_18"
                android:layout_margin="@dimen/activity_size_10"
                />
            <View
                android:layout_width="@dimen/activity_size_1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_size_5"
                android:layout_marginBottom="@dimen/activity_size_5"
                android:background="@color/gray2"
                />
            <EditText
                android:id="@+id/navigatin_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请再次输入新密码"
                android:textSize="@dimen/text_size_16"
                android:password="true"
                android:background="@null"
                android:textColorHint="@color/gray2"
                android:layout_marginLeft="@dimen/activity_size_10"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/navigation_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_45"
        android:background="@drawable/button_boder"
        android:layout_marginLeft="@dimen/activity_size_15"
        android:layout_marginRight="@dimen/activity_size_15"
        android:layout_marginTop="@dimen/activity_size_20"
        android:textColor="@color/purple"
        android:textSize="@dimen/text_size_18"
        android:text="确认" />
</LinearLayout>
