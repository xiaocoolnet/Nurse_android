<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingTop="@dimen/space_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fragment_personal_homepage_head_forum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:paddingBottom="@dimen/activity_size_5"
            android:paddingLeft="@dimen/activity_size_10"
            android:text="他/她的帖子"
            android:textColor="@color/gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_marginRight="@dimen/activity_size_10"
            android:background="@color/gray2" />

        <LinearLayout
            android:id="@+id/ll_item_find_fragment_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_100"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_size_80"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_80">

                    <TextView
                        android:id="@+id/tv_item_find_fragment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="top"
                        android:text="护士下夜班，该如何护理自己。"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_item_find_fragment_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/tv_item_find_fragment_title"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:ellipsize="end"
                        android:gravity="top"
                        android:maxLines="2"
                        android:text="护士下夜班，该如何护理自己。"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_item_find_fragment_image"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginBottom="@dimen/activity_size_10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_bg_nor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_find_fragment_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_item_find_fragment_title_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="护士下夜班，该如何护理自己。"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_item_find_fragment_content_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_size_5"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="2"
                android:text="护士下夜班，该如何护理自己。"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_size_10"
                android:layout_marginTop="@dimen/activity_size_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_find_fragment_image_one"
                    android:layout_width="@dimen/activity_size_0"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_bg_nor" />

                <ImageView
                    android:id="@+id/iv_item_find_fragment_image_two"
                    android:layout_width="@dimen/activity_size_0"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_bg_nor" />

                <ImageView
                    android:id="@+id/iv_item_find_fragment_image_three"
                    android:layout_width="@dimen/activity_size_0"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_bg_nor" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_35"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:src="@mipmap/ic_forum_like_gray" />

                <TextView
                    android:id="@+id/tv_item_find_fragment_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_5"
                    android:text="3346"
                    android:textColor="@color/btn_white_pressed"
                    android:textSize="@dimen/text_size_12" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:src="@mipmap/ic_forum_comment" />

                <TextView
                    android:id="@+id/tv_item_find_fragment_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_5"
                    android:text="3346"
                    android:textColor="@color/btn_white_pressed"
                    android:textSize="@dimen/text_size_12" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:src="@mipmap/ic_forum_location" />

                <TextView
                    android:id="@+id/tv_item_find_fragment_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_5"
                    android:text="3346"
                    android:textColor="@color/btn_white_pressed"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_marginRight="@dimen/activity_size_10"
            android:background="@color/gray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_item_find_fragment_community_photo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/activity_size_10"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_map" />

            <TextView
                android:id="@+id/tv_item_find_fragment_community_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="内科"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_item_find_fragment_community_into"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/activity_size_10"
                android:text="进入圈子"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_marginRight="@dimen/activity_size_10"
            android:background="@color/gray2" />
    </LinearLayout>
</LinearLayout>
