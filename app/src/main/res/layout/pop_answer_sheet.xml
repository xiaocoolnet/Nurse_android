<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/indicator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_size_15"
        android:layout_marginRight="@dimen/activity_size_15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/question_sheet_dot_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_dot_correct"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/question_sheet_dot_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_dot_error"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/question_sheet_dot_silver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_dot_not_answer"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/question_sheet_dot_violet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_dot_at_present"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@mipmap/mine_bg">
        <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="#fff"-->
        <!--android:layout_marginTop="@dimen/activity_size_20"-->
        <!--android:layout_marginLeft="@dimen/activity_size_15"-->
        <!--android:layout_marginRight="@dimen/activity_size_15"-->
        <!--android:layout_marginBottom="@dimen/activity_size_45"-->
        <!-->-->
        <!--<chinanurse.cn.nurse.gridview.Question_Sheet_GridView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/question_pop_gridview"-->
        <!--android:columnWidth="@dimen/activity_size_30"-->
        <!--android:numColumns="auto_fit"-->
        <!--/>-->
        <GridView
            android:id="@+id/question_pop_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_size_45"
            android:layout_marginLeft="@dimen/activity_size_15"
            android:layout_marginRight="@dimen/activity_size_15"
            android:layout_marginTop="@dimen/activity_size_20"
            android:background="#fff"
            android:columnWidth="@dimen/activity_size_60"
            android:numColumns="auto_fit" />
        <!--</ScrollView>-->
    </RelativeLayout>

</LinearLayout>
