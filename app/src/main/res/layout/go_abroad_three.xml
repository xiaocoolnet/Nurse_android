<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--网格按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_200"
                android:orientation="vertical"
                android:background="@color/gray2">
                <!--第一行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <!--第一个按钮-->
                    <RelativeLayout
                        android:id="@+id/goabroad_Online_translation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/whilte">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/goabroad_Online_translation_image"
                                android:layout_width="@dimen/activity_size_30"
                                android:layout_height="@dimen/activity_size_28"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/abroad_btn_icon0" />

                            <TextView
                                android:id="@+id/goabroad_Online_translation_text"
                                android:layout_marginTop="@dimen/activity_size_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/abroad_btn0"
                                android:textSize="@dimen/activity_size_15"
                                android:textColor="@color/black1">

                            </TextView>
                        </LinearLayout>

                    </RelativeLayout>

                    <!--第二个按钮-->
                    <RelativeLayout
                        android:id="@+id/goabroad_Exchange_rate_query"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/activity_size_1"
                        android:background="@color/whilte">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/goabroad_Exchange_rate_query_image"
                                android:layout_width="@dimen/activity_size_28"
                                android:layout_height="@dimen/activity_size_26"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/abroad_btn_icon1" />

                            <TextView
                                android:id="@+id/goabroad_Exchange_rate_query_text"
                                android:textSize="@dimen/activity_size_15"
                                android:layout_marginTop="@dimen/activity_size_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/abroad_btn1"
                                android:textColor="@color/black1">

                            </TextView>
                        </LinearLayout>

                    </RelativeLayout>

                    <!--第三个按钮-->
                    <RelativeLayout
                        android:id="@+id/goabroad_the_time_difference_query"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/whilte"
                        android:layout_marginLeft="@dimen/activity_size_1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="@dimen/activity_size_28"
                                android:layout_height="@dimen/activity_size_28"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/abroad_btn_icon2" />

                            <TextView
                                android:textSize="@dimen/activity_size_15"
                                android:layout_marginTop="@dimen/activity_size_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/abroad_btn2"
                                android:textColor="@color/black1">

                            </TextView>
                        </LinearLayout>
                    </RelativeLayout>

                    <!--第4个按钮-->
                    <RelativeLayout
                        android:id="@+id/goabroad_degree_certificate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/whilte"
                        android:layout_marginLeft="@dimen/activity_size_1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="@dimen/activity_size_30"
                                android:layout_height="@dimen/activity_size_23"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/abroad_btn_icon3" />

                            <TextView
                                android:textSize="@dimen/activity_size_15"
                                android:layout_marginTop="@dimen/activity_size_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/abroad_btn3"
                                android:textColor="@color/black1">

                            </TextView>
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

                <!--第二行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:layout_weight="1">
                    <!--第一个按钮-->
                    <RelativeLayout
                        android:id="@+id/gobroad_the_weather_query"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/whilte">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="@dimen/activity_size_30"
                                android:layout_height="@dimen/activity_size_23"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/abroad_btn_icon4" />

                            <TextView
                                android:layout_marginTop="@dimen/activity_size_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/abroad_btn4"
                                android:textSize="@dimen/activity_size_15"
                                android:textColor="@color/black1">

                            </TextView>
                        </LinearLayout>

                    </RelativeLayout>

                    <!--第二个按钮-->
                    <RelativeLayout
                        android:id="@+id/gobroad_map_query"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/activity_size_1"
                        android:background="@color/whilte">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="@dimen/activity_size_24"
                                android:layout_height="@dimen/activity_size_29"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/abroad_btn_icon5" />

                            <TextView
                                android:textSize="@dimen/activity_size_15"
                                android:layout_marginTop="@dimen/activity_size_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/abroad_btn5"
                                android:textColor="@color/black1">

                            </TextView>
                        </LinearLayout>

                    </RelativeLayout>

                    <!--第三个按钮-->
                    <RelativeLayout
                        android:id="@+id/goabroad_ticket_query"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/whilte"
                        android:layout_marginLeft="@dimen/activity_size_1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="@dimen/activity_size_30"
                                android:layout_height="@dimen/activity_size_28"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/abroad_btn_icon6" />

                            <TextView
                                android:textSize="@dimen/activity_size_15"
                                android:layout_marginTop="@dimen/activity_size_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/abroad_btn6"
                                android:textColor="@color/black1">

                            </TextView>
                        </LinearLayout>
                    </RelativeLayout>

                    <!--第4个按钮-->
                    <RelativeLayout
                        android:id="@+id/goabroad_hotel_reservation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/whilte"
                        android:layout_marginLeft="@dimen/activity_size_1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="@dimen/activity_size_26"
                                android:layout_height="@dimen/activity_size_29"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/abroad_btn_icon7" />

                            <TextView
                                android:textSize="@dimen/activity_size_15"
                                android:layout_marginTop="@dimen/activity_size_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/abroad_btn7"
                                android:textColor="@color/black1">

                            </TextView>
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>



                <!--第三行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/activity_size_1">
                    <!--第一个按钮-->
                    <RelativeLayout
                        android:id="@+id/goabroad_visa_query"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/whilte">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="@dimen/activity_size_22"
                                android:layout_height="@dimen/activity_size_27"
                                android:layout_gravity="center_horizontal"
                                android:background="@mipmap/abroad_btn_icon8" />

                            <TextView
                                android:layout_marginTop="@dimen/activity_size_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/abroad_btn8"
                                android:textSize="@dimen/activity_size_15"
                                android:textColor="@color/black1">

                            </TextView>
                        </LinearLayout>
                    </RelativeLayout>
                    <!--第二个按钮-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/activity_size_1"
                        android:background="@color/whilte">
                    </RelativeLayout>
                    <!--第三个按钮-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/whilte"
                        >
                    </RelativeLayout>
                    <!--第4个按钮-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/whilte"
                        >
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
