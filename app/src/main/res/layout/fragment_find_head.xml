<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fragment_find_head_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fragment_find_head_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fragment_me_search"
            android:drawableLeft="@mipmap/search_bar_icon_normal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_size_10"
            android:text="大家都在搜：护士那些事"
            android:textColor="#B2B2B2" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@drawable/find_fragment_gray"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_size_10"
            android:src="@mipmap/ic_new_message"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="您有"
            />
        <TextView
            android:id="@+id/tv_new_message"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="3"
            android:layout_margin="@dimen/activity_size_4"
            android:textColor="@color/purple"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="条新消息"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_community"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_choice_community"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_size_5"
            android:layout_weight="1.0"
            android:background="@drawable/find_fragment_green"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/activity_size_10"
                android:drawableTop="@mipmap/ic_choice_community"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_size_10"
                android:text="精选圈子"
                android:textColor="@color/white">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hot_community"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_size_5"
            android:layout_weight="1.0"
            android:background="@drawable/find_fragment_blue"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/activity_size_10"
                android:drawableTop="@mipmap/ic_hot_community"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_size_10"
                android:text="品管圈"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_all_community"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_size_5"
            android:layout_weight="1.0"
            android:background="@drawable/find_fragment_purple"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/activity_size_10"
                android:drawableTop="@mipmap/ic_all_community"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_size_10"
                android:text="全部圈子"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_recycler_community_recommend"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="热门圈子推荐"
            android:textColor="@color/gray" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_community_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_forum_recommend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_height">

        <chinanurse.cn.nurse.ui.MyListview
            android:id="@+id/lv_forum_recommend"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:descendantFocusability="blocksDescendants"
            android:paddingLeft="@dimen/activity_size_10"
            android:paddingRight="@dimen/activity_size_10" />

    </LinearLayout>
</LinearLayout>