<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ril_choose_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:background="@drawable/button_boder"
        android:layout_marginTop="@dimen/activity_size_20">

        <TextView
            android:id="@+id/question_option"
            android:layout_marginTop="@dimen/activity_size_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/activity_size_5"
            android:paddingLeft="20dp"
            android:text="A、"
            android:textColor="@color/purple"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_answer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="消化道症状"
            android:layout_marginTop="@dimen/activity_size_5"
            android:layout_marginBottom="@dimen/activity_size_5"
            android:paddingRight="@dimen/activity_size_10"
            android:textColor="@color/purple"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</LinearLayout>
