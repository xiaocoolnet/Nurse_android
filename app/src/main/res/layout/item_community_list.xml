<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/title_color"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="5dip">


    <ImageView
        android:id="@+id/iv_item_community_list_photo"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_map"
        android:scaleType="fitCenter"/>


    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:paddingLeft="10dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_community_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:text="急诊科"
                android:textColor="@color/purple"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_community_list_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dip"
                android:text="113万人"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/tv_item_community_list_forum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dip"
                android:text="113帖子"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_community_list_note"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:text="me_personal_post_temp"
            android:textColor="@color/gray"
            android:maxLines="2"
            android:paddingLeft="3dip"
            android:paddingRight="20dip"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <chinanurse.cn.nurse.Fragment_Nurse.view.MyTextViewButton
            android:id="@+id/tv_item_community_list_join"
            android:layout_width="70dip"
            android:layout_height="30dip"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="加入"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_join"
            android:drawablePadding="1dp"
            android:drawableLeft="@mipmap/ic_join"
            android:textColor="@color/purple"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>