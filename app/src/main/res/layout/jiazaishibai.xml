<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ril_shibai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_wifi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_size_20"
            android:text="加载失败..."
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_size_5"
            android:text="请检查您的网络连接是否正确"
            android:textColor="@color/gray6" />

        <TextView
            android:id="@+id/shuaxin_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_50"
            android:layout_marginLeft="@dimen/activity_size_30"
            android:layout_marginRight="@dimen/activity_size_30"
            android:layout_marginTop="@dimen/activity_size_30"
            android:background="@drawable/button_boder_shuaxin"
            android:gravity="center"
            android:text="刷新页面"
            android:textColor="@color/purple"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
</RelativeLayout>
