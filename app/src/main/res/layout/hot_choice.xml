<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/listview_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_40"
            android:orientation="horizontal">

            <chinanurse.cn.nurse.picture.RoudImage
                android:id="@+id/myinof_image_head_show"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/myinfo_next1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:layout_marginRight="@dimen/activity_size_10">

                <TextView
                    android:id="@+id/choice_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="God_Like"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/choice_float"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_size_10"
                    android:text="1楼"
                    android:textColor="@color/gray6"
                    android:textSize="@dimen/text_size_12" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/choice_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_size_60"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/study_text"
            android:gravity="center_vertical"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/choice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09-05\t09:24"
            android:paddingLeft="@dimen/activity_size_60"
            android:textColor="@color/gray6"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/activity_size_10"
            />
            <TextView
                android:id="@+id/choice_time_reply"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="回复"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray6"
                android:layout_marginRight="@dimen/activity_size_15"
                android:layout_marginTop="@dimen/activity_size_10"
                android:gravity="center_vertical"
                />
        </RelativeLayout>
        <ListView
            android:id="@+id/choice_content_sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_size_80"
            android:paddingRight="@dimen/activity_size_10"
            android:textColor="@color/gray6"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/activity_size_10"
            />
    </LinearLayout>
</LinearLayout>
