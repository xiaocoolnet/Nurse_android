<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:gravity="center">

            <!-- 头像-->

            <chinanurse.cn.nurse.picture.RoudImage
                android:id="@+id/iv_item_message_head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/logo" />

            <ImageView
                android:id="@+id/iv_item_message_authentication"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_alignBottom="@+id/iv_item_message_head"
                android:layout_alignRight="@+id/iv_item_message_head"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_authentication_small" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_message_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_size_5"
                        android:paddingRight="@dimen/activity_size_5"
                        android:text="小丫头"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_item_message_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical|right"
                        android:paddingRight="5dip"
                        android:text="3分钟前"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_message_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="@dimen/activity_size_2"
                    android:text="Lv.26"

                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_item_message_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="@dimen/activity_size_2"
                    android:text="Lv.26"
                    android:textSize="14dp" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>