<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <chinanurse.cn.nurse.ui.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布招聘信息"
                android:textSize="@dimen/activity_size_16"
                android:textColor="@color/purple"
                android:layout_marginTop="@dimen/activity_size_10"
                android:layout_marginLeft="@dimen/activity_size_15"
                />
            <ImageView
                android:layout_marginTop="@dimen/activity_size_6"
                android:layout_width="@dimen/activity_size_350"
                android:layout_height="@dimen/activity_size_1"
                android:background="@color/purple"
                android:layout_gravity="center_horizontal"/>
            <!--职位名称-->
            <LinearLayout
                android:layout_width="@dimen/activity_size_350"
                android:layout_height="@dimen/activity_size_50"
                android:background="@mipmap/gray_frame0"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_size_10"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职位名称"
                        android:textSize="@dimen/activity_size_16"
                        android:textColor="@color/black1"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7">
                    <ImageView
                        android:layout_width="@dimen/activity_size_1"
                        android:layout_height="@dimen/activity_size_40"
                        android:background="@color/gray2"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/activity_size_16"
                        android:hint="请填写职位名称"
                        android:textColor="@color/black1"
                        android:background="@null"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>


            <!--企业简介-->
            <LinearLayout
                android:layout_width="@dimen/activity_size_350"
                android:layout_height="@dimen/activity_size_50"
                android:background="@mipmap/gray_frame1"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业名称"
                        android:textSize="@dimen/activity_size_16"
                        android:textColor="@color/black1"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7">
                    <ImageView
                        android:layout_width="@dimen/activity_size_1"
                        android:layout_height="@dimen/activity_size_40"
                        android:background="@color/gray2"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/activity_size_16"
                        android:hint="请输入您的企业名称"
                        android:textColor="@color/black1"
                        android:background="@null"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>

            <!--企业简介-->
            <LinearLayout
                android:layout_width="@dimen/activity_size_350"
                android:layout_height="@dimen/activity_size_50"
                android:background="@mipmap/gray_frame1"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业简介"
                        android:textSize="@dimen/activity_size_16"
                        android:textColor="@color/black1"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7">
                    <ImageView
                        android:layout_width="@dimen/activity_size_1"
                        android:layout_height="@dimen/activity_size_40"
                        android:background="@color/gray2"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/activity_size_16"
                        android:hint="请输入您的企业简介"
                        android:textColor="@color/black1"
                        android:background="@null"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>


            <!--联系电话-->
            <LinearLayout
                android:layout_width="@dimen/activity_size_350"
                android:layout_height="@dimen/activity_size_50"
                android:background="@mipmap/gray_frame1"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话"
                        android:textSize="@dimen/activity_size_16"
                        android:textColor="@color/black1"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7">
                    <ImageView
                        android:layout_width="@dimen/activity_size_1"
                        android:layout_height="@dimen/activity_size_40"
                        android:background="@color/gray2"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/activity_size_16"
                        android:hint="请输入您的联系电话"
                        android:textColor="@color/black1"
                        android:background="@null"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>


            <!--联系邮箱-->

            <LinearLayout
                android:layout_width="@dimen/activity_size_350"
                android:layout_height="@dimen/activity_size_50"
                android:background="@mipmap/gray_frame1"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系邮箱"
                        android:textSize="@dimen/activity_size_16"
                        android:textColor="@color/black1"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7">
                    <ImageView
                        android:layout_width="@dimen/activity_size_1"
                        android:layout_height="@dimen/activity_size_40"
                        android:background="@color/gray2"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/activity_size_16"
                        android:hint="请输入您的联系邮箱"
                        android:textColor="@color/black1"
                        android:background="@null"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </chinanurse.cn.nurse.ui.ReboundScrollView>

</LinearLayout>
