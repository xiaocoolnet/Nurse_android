<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/purple" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/activity_size_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/activity_size_20">

                        <LinearLayout
                            android:id="@+id/community_care"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:background="@drawable/write_community_show_imagebutton">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/activity_size_5"
                                android:layout_marginLeft="@dimen/activity_size_10"
                                android:layout_marginRight="@dimen/activity_size_10"
                                android:layout_marginTop="@dimen/activity_size_5"
                                android:text="+\t关注"
                                android:textColor="@color/purple"
                                android:textSize="@dimen/text_size_16" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/community_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:layout_toLeftOf="@id/community_care"
                            android:text="中国护士网在线考试专用贴lalala"
                            android:textSize="@dimen/text_size_25" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_size_10">

                        <ImageView
                            android:id="@+id/lv_image"
                            android:layout_width="@dimen/activity_size_30"
                            android:layout_height="@dimen/activity_size_30"
                            android:layout_margin="@dimen/activity_size_10"
                            android:src="@mipmap/img_head_nor" />

                        <TextView
                            android:id="@+id/lv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/lv_image"
                            android:layout_toRightOf="@id/lv_image"
                            android:text="小丫头妈咪宝贝"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/lv_name"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:layout_toRightOf="@id/lv_name"
                            android:background="@drawable/write_community_show_imagebutton"
                            android:paddingLeft="@dimen/activity_size_3"
                            android:paddingRight="@dimen/activity_size_3"
                            android:text="楼主"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/lv_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/lv_name"
                            android:layout_below="@id/lv_name"
                            android:layout_marginTop="@dimen/activity_size_5"
                            android:text="治疗室护士"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_10" />

                        <TextView
                            android:id="@+id/lv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/lv_position"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:layout_toRightOf="@id/lv_position"
                            android:text="Lv.05"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/lv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_size_10"
                            android:text="2016-07-07"
                            android:textSize="@dimen/text_size_12" />

                        <ImageView
                            android:id="@+id/lv_comment"
                            android:layout_width="@dimen/activity_size_10"
                            android:layout_height="@dimen/activity_size_8"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_size_5"
                            android:layout_toLeftOf="@id/lv_time"
                            android:src="@mipmap/abroad_icon_date" />

                        <TextView
                            android:id="@+id/lv_text_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_size_10"
                            android:layout_toLeftOf="@id/lv_comment"
                            android:text="2254"
                            android:textSize="@dimen/text_size_12" />

                        <ImageView
                            android:layout_width="@dimen/activity_size_10"
                            android:layout_height="@dimen/activity_size_8"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_size_5"
                            android:layout_toLeftOf="@id/lv_text_like"
                            android:src="@mipmap/ic_eye_purple" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/lv_answ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:text="从期望薪资可以看出求职者对自己的定位，符合自己能力及\n潜力的薪资报价，体现的是对自身能力的认可。。。"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_size_80"
                        android:layout_marginTop="@dimen/activity_size_12"
                        android:orientation="horizontal">
                        <!--<GridView/>-->
                        <ImageView
                            android:id="@+id/lv_leftimage"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:layout_weight="1"
                            android:src="@mipmap/abroad_ex1" />

                        <ImageView
                            android:id="@+id/lv_centerimage"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:layout_weight="1"
                            android:src="@mipmap/abroad_ex1" />

                        <ImageView
                            android:id="@+id/lv_rightimage"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/activity_size_10"
                            android:layout_marginRight="@dimen/activity_size_10"
                            android:layout_weight="1"
                            android:src="@mipmap/abroad_ex1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_size_15"
                        android:layout_marginLeft="@dimen/activity_size_50"
                        android:layout_marginRight="@dimen/activity_size_50"
                        android:layout_marginTop="@dimen/activity_size_30"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lv_collect"
                            android:layout_width="@dimen/activity_size_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/ic_two_collect" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_size_5"
                                android:text="收藏"
                                android:textColor="@color/purple"
                                android:textSize="@dimen/text_size_20" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lv_thumb_up"
                            android:layout_width="@dimen/activity_size_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/ic_three_like" />

                            <TextView
                                android:id="@+id/lv_thumb_up_Num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_size_5"
                                android:text="1136"
                                android:textColor="@color/purple"
                                android:textSize="@dimen/text_size_20" />

                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="@dimen/activity_size_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/ic_two_comment" />

                            <TextView
                                android:id="@+id/lv_invitation_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_size_5"
                                android:text="5610"
                                android:textColor="@color/purple"
                                android:textSize="@dimen/text_size_20" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:layout_marginRight="@dimen/activity_size_10"
                        android:background="@color/btn_gray_pressed_status"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView
                            android:id="@+id/post_detail_show"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_50"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_1"
                android:layout_marginTop="@dimen/activity_size_5"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_size_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lv_shared"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_15"
                    android:background="@mipmap/ic_two_share" />

                <ImageView
                    android:id="@+id/show_detail_main_thumb_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:background="@mipmap/ic_three_like" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_community_write_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/activity_size_5"
                        android:layout_marginLeft="@dimen/activity_size_5"
                        android:layout_marginRight="@dimen/activity_size_15"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:background="@drawable/shoe_detail_reply_border"
                        android:hint="回复楼主"
                        android:imeOptions="actionSend"
                        android:paddingLeft="@dimen/activity_size_10"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/show_detail_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_size_25"
                        android:text="已有120条回帖"
                        android:textColor="@color/gray" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_1"
                android:layout_alignParentBottom="true"
                android:background="@color/gray" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
