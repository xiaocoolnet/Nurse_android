<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip">

                <!-- 头像-->
                <chinanurse.cn.nurse.picture.RoudImage
                    android:id="@+id/iv_item_forum_list_head"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/mine_title"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/logo" />

                <ImageView
                    android:id="@+id/iv_item_forum_list_authentication"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignBottom="@+id/iv_item_forum_list_head"
                    android:layout_alignRight="@+id/iv_item_forum_list_head"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_authentication_small" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_forum_list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_size_5"
                        android:paddingRight="@dimen/activity_size_5"
                        android:text="小丫头"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_item_forum_list_authentication_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/find_fragment_blue"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_size_5"
                        android:paddingRight="@dimen/activity_size_5"
                        android:paddingTop="@dimen/activity_size_2"
                        android:paddingBottom="@dimen/activity_size_2"
                        android:text="主管护师"
                        android:textSize="12sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_item_forum_list_authentication_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical|right"
                        android:paddingRight="5dip"
                        android:text="3分钟前"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_forum_list_authentication_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Lv.26"
                    android:textSize="12sp"
                    android:textColor="@color/purple" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_find_fragment_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_100"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_size_80"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_find_fragment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="top"
                    android:text="护士下夜班，该如何护理自己。"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_item_find_fragment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_item_find_fragment_title"
                    android:layout_marginTop="@dimen/activity_size_5"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:maxLines="2"
                    android:text="护士下夜班，该如何护理自己。"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_16" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_item_find_fragment_image"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginBottom="@dimen/activity_size_10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_bg_nor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_find_fragment_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_item_find_fragment_title_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="护士下夜班，该如何护理自己。"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_item_find_fragment_content_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_size_5"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="2"
                android:text="护士下夜班，该如何护理自己。"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_size_10"
                android:layout_marginTop="@dimen/activity_size_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_find_fragment_image_one"
                    android:layout_width="@dimen/activity_size_0"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_bg_nor" />

                <ImageView
                    android:id="@+id/iv_item_find_fragment_image_two"
                    android:layout_width="@dimen/activity_size_0"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_bg_nor" />

                <ImageView
                    android:id="@+id/iv_item_find_fragment_image_three"
                    android:layout_width="@dimen/activity_size_0"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_bg_nor" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_35"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:src="@mipmap/ic_forum_like_gray" />

                <TextView
                    android:id="@+id/tv_item_find_fragment_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_5"
                    android:text="3346"
                    android:textColor="@color/btn_white_pressed"
                    android:textSize="@dimen/text_size_12" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:src="@mipmap/ic_forum_comment" />

                <TextView
                    android:id="@+id/tv_item_find_fragment_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_5"
                    android:text="3346"
                    android:textColor="@color/btn_white_pressed"
                    android:textSize="@dimen/text_size_12" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:src="@mipmap/ic_forum_location" />

                <TextView
                    android:id="@+id/tv_item_find_fragment_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_5"
                    android:text="3346"
                    android:textColor="@color/btn_white_pressed"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_marginRight="@dimen/activity_size_10"
            android:background="@color/gray2" />
    </LinearLayout>
</LinearLayout>