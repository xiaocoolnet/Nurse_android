<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <include layout="@layout/title_top" />

        <TextView
            android:id="@+id/myinfo_update_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_size_15"
            android:gravity="center_vertical"
            android:text="@string/my_info_update_save"
            android:textColor="@color/purple"
            android:textSize="@dimen/text_size_18" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/purple" />

    <EditText
        android:id="@+id/myinbfo_update_content"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_size_15"
        android:textSize="@dimen/text_size_18" />
</LinearLayout>
