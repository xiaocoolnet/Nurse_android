<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_size_240"
    android:id="@+id/lv_all_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_size_10">

        <ImageView
            android:id="@+id/lv_image"
            android:layout_width="@dimen/activity_size_30"
            android:layout_height="@dimen/activity_size_30"
            android:layout_margin="@dimen/activity_size_10"
            android:src="@mipmap/img_head_nor" />

        <TextView
            android:id="@+id/lv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/lv_image"
            android:layout_toRightOf="@id/lv_image"
            android:text="小丫头妈咪宝贝"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/lv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lv_name"
            android:layout_below="@id/lv_name"
            android:text="30秒前"
            android:textColor="@color/gray"
            android:layout_marginTop="@dimen/activity_size_5"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/lv_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2254"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_12"
            android:layout_marginRight="@dimen/activity_size_10"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/lv_comment"
            android:layout_width="@dimen/activity_size_10"
            android:layout_height="@dimen/activity_size_8"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_comment"
            android:layout_toLeftOf="@id/lv_ll"
            android:layout_marginRight="@dimen/activity_size_5"

            />
        <TextView
            android:id="@+id/lv_text_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2254"
            android:layout_toLeftOf="@id/lv_comment"
            android:textSize="@dimen/text_size_12"
            android:layout_marginRight="@dimen/activity_size_10"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="@dimen/activity_size_10"
            android:layout_height="@dimen/activity_size_8"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_like_gray"
            android:layout_toLeftOf="@id/lv_text_like"
            android:layout_marginRight="@dimen/activity_size_5"
            />
    </RelativeLayout>

    <TextView

        android:id="@+id/lv_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_size_10"
        android:text="请问各位同行，职场新手如何'谈薪'才合适？"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/lv_answ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_size_10"
        android:text="从期望薪资可以看出求职者对自己的定位，符合自己能力及\n潜力的薪资报价，体现的是对自身能力的认可。。。"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_80"
        android:layout_marginTop="@dimen/activity_size_12"
        android:orientation="horizontal">
        <!--<GridView/>-->
        <ImageView
            android:id="@+id/lv_leftimage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_weight="1"
            android:src="@mipmap/abroad_ex1" />

        <ImageView
            android:id="@+id/lv_centerimage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_weight="1"
            android:src="@mipmap/abroad_ex1" />

        <ImageView
            android:id="@+id/lv_rightimage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_marginRight="@dimen/activity_size_10"
            android:layout_weight="1"
            android:src="@mipmap/abroad_ex1" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_size_10"
        android:layout_marginLeft="@dimen/activity_size_10"
        android:layout_marginBottom="@dimen/activity_size_15"
        >

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/btn_gray_pressed_status"
        android:layout_gravity="bottom"
        ></View>
</LinearLayout>
