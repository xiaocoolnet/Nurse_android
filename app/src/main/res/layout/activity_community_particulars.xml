<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_48"
        android:background="@color/title_color">

        <RelativeLayout
            android:id="@+id/rl_fragment_community_particulars_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_fragment_community_particulars_back"
                android:layout_width="@dimen/activity_size_9"
                android:layout_height="@dimen/activity_size_17"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:src="@mipmap/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_7"
                android:layout_toRightOf="@id/iv_fragment_community_particulars_back"
                android:text="@string/web_back_text"
                android:textColor="@color/indicator"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="圈子详情"
            android:textColor="@color/indicator"
            android:textSize="@dimen/text_size_18" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_1"
            android:layout_alignParentBottom="true"
            android:background="@color/indicator" />
    </RelativeLayout>

    <chinanurse.cn.nurse.ui.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/title_color"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="10dip">

                <ImageView
                    android:id="@+id/iv_fragment_community_particulars_photo"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/app_name"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_map" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dip">

                    <TextView
                        android:id="@+id/tv_fragment_community_particulars_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:padding="5dp"
                        android:text="急诊科"
                        android:textColor="@color/purple"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_fragment_community_particulars_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dip"
                            android:text="113万人"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/tv_fragment_community_particulars_forum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dip"
                            android:text="113帖子"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <chinanurse.cn.nurse.Fragment_Nurse.view.MyTextViewButton
                        android:id="@+id/tv_fragment_community_particulars_join"
                        android:layout_width="80dip"
                        android:layout_height="40dip"
                        android:background="@drawable/bg_join"
                        android:drawableLeft="@mipmap/ic_join"
                        android:drawablePadding="1dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="加入"
                        android:textColor="@color/purple"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/activity_size_40"
                android:background="@color/gray2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/title_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="圈子介绍"
                    android:textColor="@color/gray" />

                <chinanurse.cn.nurse.Fragment_Nurse.view.CollapsibleTextView
                    android:id="@+id/tv_fragment_community_particulars_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                 />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/title_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="圈主"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@color/title_color"
                        android:gravity="center"
                        android:orientation="vertical">

                        <chinanurse.cn.nurse.picture.RoudImage
                            android:id="@+id/iv_fragment_community_particulars_one"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/logo" />

                        <TextView
                            android:id="@+id/tv_fragment_community_particulars_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="圈主"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@color/title_color"
                        android:gravity="center"
                        android:orientation="vertical">

                        <chinanurse.cn.nurse.picture.RoudImage
                            android:id="@+id/iv_fragment_community_particulars_two"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/logo" />

                        <TextView
                            android:id="@+id/tv_fragment_community_particulars_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="圈主"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@color/title_color"
                        android:gravity="center"
                        android:orientation="vertical">

                        <chinanurse.cn.nurse.picture.RoudImage
                            android:id="@+id/iv_fragment_community_particulars_three"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/logo" />

                        <TextView
                            android:id="@+id/tv_fragment_community_particulars_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="圈主"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_fragment_community_particulars_top"
                    style="@style/study_RelativeLayout">

                    <ImageView
                        android:id="@+id/iv_fragment_community_particulars_top"
                        style="@style/study_image_left"
                        android:src="@mipmap/ic_top_forum" />

                    <TextView
                        style="@style/study_textview"
                        android:layout_toRightOf="@id/iv_fragment_community_particulars_top"
                        android:text="置顶帖" />

                    <ImageView style="@style/study_image_right" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/activity_size_40"
                    android:background="@color/gray2" />

                <RelativeLayout
                    android:id="@+id/rl_fragment_community_particulars_best"
                    style="@style/study_RelativeLayout">

                    <ImageView
                        android:id="@+id/iv_fragment_community_particulars_best"
                        style="@style/study_image_left"
                        android:src="@mipmap/ic_best_forum" />

                    <TextView
                        style="@style/study_textview"
                        android:layout_toRightOf="@id/iv_fragment_community_particulars_best"
                        android:text="精华贴" />

                    <ImageView style="@style/study_image_right" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/activity_size_40"
                    android:background="@color/gray2" />

                <RelativeLayout
                    android:id="@+id/rl_fragment_community_particulars_apply_community"
                    style="@style/study_RelativeLayout">

                    <ImageView
                        android:id="@+id/iv_fragment_community_particulars_apply_community"
                        style="@style/study_image_left"
                        android:src="@mipmap/ic_apply_community" />

                    <TextView
                        style="@style/study_textview"
                        android:layout_toRightOf="@id/iv_fragment_community_particulars_apply_community"
                        android:text="申请圈主" />
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/activity_size_5"
                        android:layout_toLeftOf="@+id/iv_into" />

                    <ImageView
                        android:id="@+id/iv_into"
                        style="@style/study_image_right" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/activity_size_40"
                    android:background="@color/gray2" />

                <RelativeLayout
                    android:id="@+id/rl_fragment_community_particulars_cancel_focus"
                    style="@style/study_RelativeLayout">

                    <ImageView
                        android:id="@+id/iv_fragment_me_head_manager_community"
                        style="@style/study_image_left"
                        android:src="@mipmap/ic_manager_community" />

                    <TextView
                        style="@style/study_textview"
                        android:layout_toRightOf="@id/iv_fragment_me_head_manager_community"
                        android:text="取消关注" />

                    <ImageView style="@style/study_image_right" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </chinanurse.cn.nurse.ui.ReboundScrollView>
</LinearLayout>