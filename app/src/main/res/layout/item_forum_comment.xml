<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_size_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip">

                <!-- 头像-->
                <chinanurse.cn.nurse.picture.RoudImage
                    android:id="@+id/iv_item_forum_comment_head"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/mine_title"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/logo" />

                <ImageView
                    android:id="@+id/iv_item_forum_comment_authentication"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_alignBottom="@+id/iv_item_forum_comment_head"
                    android:layout_alignRight="@+id/iv_item_forum_comment_head"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_authentication_small" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_forum_comment_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_size_5"
                        android:paddingRight="@dimen/activity_size_5"
                        android:text="小丫头"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_item_forum_comment_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/find_fragment_blue"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_size_5"
                        android:paddingRight="@dimen/activity_size_5"
                        android:paddingBottom="@dimen/activity_size_2"
                        android:paddingTop="@dimen/activity_size_2"
                        android:text="主管护师"
                        android:textSize="12sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_item_forum_comment_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical|right"
                        android:paddingRight="5dip"
                        android:text="3分钟前"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_item_forum_comment_level"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/activity_size_5"
                        android:paddingLeft="@dimen/activity_size_5"
                        android:text="3楼"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_forum_comment_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Lv.26"
                    android:textSize="12sp"
                    android:textColor="@color/purple" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_forum_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Lv.26"
            android:textColor="@color/black" />
        <chinanurse.cn.nurse.ui.MyListview
            android:id="@+id/ll_item_forum_comment_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_size_80"
            android:paddingRight="@dimen/activity_size_10"
            android:textColor="@color/gray6"
            android:gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_35"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|left">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:src="@mipmap/ic_forum_time" />

                <TextView
                    android:id="@+id/tv_item_forum_comment_time_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_5"
                    android:text="3346"
                    android:textColor="@color/btn_white_pressed"
                    android:textSize="@dimen/text_size_12" />

                <ImageView
                    android:id="@+id/iv_item_forum_comment_like"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:src="@mipmap/ic_forum_like_gray" />

                <TextView
                    android:id="@+id/tv_item_forum_comment_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_5"
                    android:text="点赞"
                    android:textColor="@color/btn_white_pressed"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right">
                <TextView
                    android:id="@+id/tv_item_forum_comment_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_size_5"
                    android:paddingRight="@dimen/activity_size_5"
                    android:text="删除"
                    android:textColor="@color/btn_white_pressed"
                    android:textSize="@dimen/text_size_12" />
                <TextView
                    android:id="@+id/tv_item_forum_comment_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_size_5"
                    android:paddingRight="@dimen/activity_size_5"
                    android:text="回复"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/text_size_12" />
                <TextView
                    android:id="@+id/tv_item_forum_comment_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_size_5"
                    android:paddingRight="@dimen/activity_size_5"
                    android:text="举报"
                    android:textColor="#EED2EE"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_marginRight="@dimen/activity_size_10"
            android:background="@color/gray2" />

    </LinearLayout>

</LinearLayout>