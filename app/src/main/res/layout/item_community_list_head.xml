<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/activity_size_40"
        android:background="@color/gray2" />

    <LinearLayout
        style="@style/study_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_community_list_head"
            android:layout_width="@dimen/activity_size_15"
            android:layout_height="@dimen/activity_size_15"
            android:layout_margin="@dimen/activity_size_13"
            android:layout_gravity="center"
            android:src="@mipmap/ic_choice_community_spinner" />
        <TextView
            android:id="@+id/tv_item_community_list_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/activity_size_5"
            android:textSize="16dp"
            android:text="1234人参与，4345个帖子"
            android:textColor="@color/purple"
            />
    </LinearLayout>
</LinearLayout>