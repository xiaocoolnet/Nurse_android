<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_size_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myinof_image_head_show"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_size_15"
            android:layout_toLeftOf="@+id/myinfo_next1"
            android:src="@mipmap/img_head_nor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:layout_marginRight="@dimen/activity_size_15"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/show_detail_post_username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="树友"
                    android:textSize="@dimen/activity_size_18" />

                <TextView
                    android:id="@+id/show_detail_post_floor_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1楼"
                    android:textSize="@dimen/activity_size_18" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/show_detail_post_position_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="树友"
                    android:textSize="@dimen/activity_size_18" />

                <TextView
                    android:id="@+id/show_detail_post_level_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:text="lv.20"
                    android:textSize="@dimen/activity_size_18" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/show_detail_post_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_size_15"
        android:layout_marginRight="@dimen/activity_size_15"
        android:layout_marginTop="@dimen/activity_size_15"
        android:text="不是我要这样的......"
        android:textSize="@dimen/text_size_20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_size_15"
        >
        <ImageView
            android:id="@+id/show_detail_time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/abroad_icon_date"
            android:layout_marginLeft="@dimen/activity_size_15"
            />
        <TextView
            android:id="@+id/show_detail_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016/07/08"
            android:layout_toRightOf="@id/show_detail_time_image"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:textSize="@dimen/text_size_12"
            />
        <ImageView
            android:id="@+id/show_detail_specific_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_location"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/show_detail_time_text"
            android:layout_marginLeft="@dimen/activity_size_30"
            />
        <TextView
            android:id="@+id/show_detail_specific_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郑州"
            android:layout_toRightOf="@id/show_detail_specific_location"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:textSize="@dimen/text_size_12"
            />
        <TextView
            android:id="@+id/show_detail_specific_reply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textColor="@color/purple"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_size_15"
            android:textSize="@dimen/text_size_18"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_1"
        android:layout_marginLeft="@dimen/activity_size_15"
        android:layout_marginRight="@dimen/activity_size_15"
        android:background="@color/gray2"
        />
</LinearLayout>
