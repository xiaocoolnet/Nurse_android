<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment_Nurse_Study_News.Paper_Protect">

    <include layout="@layout/title_top"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_1"
        android:background="@color/purple"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ril_list"
        >
        <TextView
            android:id="@+id/detail_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/view_color"
            android:text="护士网"
            android:textColor="@color/title_color"
            android:textSize="30sp" />
        <chinanurse.cn.nurse.pnlllist.PullToRefreshListView
            android:id="@+id/lv_comprehensive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_color"
            android:drawSelectorOnTop="false"
            android:divider="@null"
            android:footerDividersEnabled = "false"
            android:scrollbars="none"
            />
    </RelativeLayout>
        <include layout="@layout/jiazaishibai"/>
    </RelativeLayout>

</LinearLayout>
