<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rela_item_mycollect_first"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/activity_size_15"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_note_small" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="文章标题(暂无数据)"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/activity_size_5"
            >
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/study_text"
                android:textSize="@dimen/text_size_14"
                android:layout_marginLeft="@dimen/activity_size_5"
                android:text="2016/7/16" />

            <TextView
                android:id="@+id/tv_from_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/study_text"
                android:textSize="@dimen/text_size_14"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/tv_time"
                android:text="lalala" />
            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_from_textview"
                android:layout_centerVertical="true"
                android:textColor="@color/study_text"
                android:textSize="@dimen/text_size_14"
                android:layout_alignBaseline="@+id/tv_time"
                android:text="来自：" />
        </RelativeLayout>
            </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>
