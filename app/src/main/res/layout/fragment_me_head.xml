<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fragment_me_head_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fragment_me_head_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fragment_me_search"
            android:drawableLeft="@mipmap/search_bar_icon_normal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_size_10"
            android:text="大家都在搜：护士那些事"
            android:textColor="#B2B2B2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_fragment_me_head_my_forum"
            style="@style/study_RelativeLayout"
            >

            <ImageView
                android:id="@+id/iv_fragment_me_head_my_form"
                style="@style/study_image_left"
                android:src="@mipmap/ic_my_forum" />

            <TextView
                style="@style/study_textview"
                android:layout_toRightOf="@id/iv_fragment_me_head_my_form"
                android:text="我的帖子" />

            <ImageView style="@style/study_image_right" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_size_40"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/rl_fragment_me_head_authentication"
            style="@style/study_RelativeLayout">

            <ImageView
                android:id="@+id/iv_fragment_me_head_authentication"
                style="@style/study_image_left"
                android:src="@mipmap/ic_authentication" />

            <TextView
                style="@style/study_textview"
                android:layout_toRightOf="@id/iv_fragment_me_head_authentication"
                android:text="认证" />
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="@dimen/activity_size_5"
                android:layout_toLeftOf="@+id/iv_into" />

            <ImageView
                android:id="@+id/iv_into"
                style="@style/study_image_right" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_size_40"
            android:background="@color/gray2" />
        <RelativeLayout
            android:id="@+id/rl_fragment_me_head_manager_community"
            style="@style/study_RelativeLayout">

            <ImageView
                android:id="@+id/iv_fragment_me_head_manager_community"
                style="@style/study_image_left"
                android:src="@mipmap/ic_manager_community" />

            <TextView
                style="@style/study_textview"
                android:layout_toRightOf="@id/iv_fragment_me_head_manager_community"
                android:text="管理圈子" />

            <ImageView style="@style/study_image_right" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/activity_size_13"
        android:layout_marginBottom="3dp"
        android:gravity="bottom"
        android:text="我的圈子"
        android:textSize="16sp" />
</LinearLayout>
