<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rela_mine_news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_70"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_size_60">

            <ImageView
                android:id="@+id/dot_red"
                android:layout_width="@dimen/activity_size_10"
                android:layout_height="@dimen/activity_size_10"
                android:layout_marginLeft="@dimen/activity_size_5"
                android:layout_marginTop="@dimen/activity_size_5"
                android:background="@drawable/question_sheet_dot_red"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/activity_size_50"
                android:layout_height="@dimen/activity_size_50"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:layout_marginRight="@dimen/activity_size_10"
                android:layout_marginTop="@dimen/activity_size_10"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_70"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/activity_size_10"
                    android:layout_marginTop="@dimen/activity_size_10"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="我的标题 "
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/activity_size_10"
                    android:layout_marginRight="@dimen/activity_size_10"
                    android:gravity="right"
                    android:text="1234" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
